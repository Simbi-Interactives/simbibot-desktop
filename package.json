{
  "name": "app",
  "version": "0.0.2",
  "private": true,
  "main": "electron/main.js",
  "author": "simbibot",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "dev:electron": "NODE_ENV=development electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "cd frontend && ionic build --prod &&  cd .. && electron-builder --mac --win -p always",
    "publish:mac": "cd frontend && ionic build --prod &&  cd .. && electron-builder --mac -p always",
    "publish:win": "cd frontend && ionic build --prod &&  cd .. && electron-builder --win -p always",
    "build:exe": "cd frontend && ionic build --prod &&  cd .. && electron-builder",
    "build:32bit": "cd frontend && ionic build --prod &&  cd .. && electron-builder -w --ia32"
  },
  "build": {
    "appId": "com.simbibotdesktop.app",
    "productName": "Simbibot Desktop",
    "directories": {
      "output": "build"
    },
    "asar": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "./simbibot.ico"
    },
    "extends": null,
    "publish": [
      {
        "provider": "github",
        "owner": "Simbi-Interactives",
        "repo": "simbibot-desktop"
      }
    ]
  },
  "dependencies": {
    "async": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "electron-log": "^4.2.4",
    "express": "~4.16.1",
    "fast-csv": "^4.3.1",
    "form-data": "^3.0.0",
    "got": "^11.5.2",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "node-cron": "^2.0.3",
    "node-sass": "^4.13.0",
    "sqlite3": "^4.1.1",
    "update-electron-app": "^1.5.0",
    "xlsx": "^0.15.4"
  },
  "devDependencies": {
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "electron-rebuild": "^1.8.8",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.2"
  }
}
